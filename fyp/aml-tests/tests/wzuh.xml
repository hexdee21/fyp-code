<group name="local,failed_logins,">

    <!-- Base rule: Single failed login -->
  <rule id="100001" level="5">
    <if_sid>5710</if_sid> <!-- SSH authentication failed -->
    <description>Single failed login detected</description>
    <group>authentication_failed,</group>
  </rule>

    <!-- Frequency rule: 3 failed logins in 60 seconds -->
  <rule id="100002" level="10">
    <if_matched_sid>100001</if_matched_sid>
    <same_source_ip />
    <frequency>3</frequency>
    <timeframe>60</timeframe>
    <description>Multiple failed logins in short time (possible brute force)</description>
    <group>authentication_failed,bruteforce,pci_dss_10.2.4,pci_dss_10.2.5,</group>

  <mitre>
    <id>T1110</id>
    <tactic>Credential Access</tactic>
    <technique>Brute Force</technique>
  </mitre>
  </rule>

</group>